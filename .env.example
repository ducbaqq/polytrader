# Polymarket API Credentials
# Get these from https://docs.polymarket.com/

# Your private key for signing (without 0x prefix)
# Optional - bot works in read-only mode without credentials
POLYMARKET_PRIVATE_KEY=your_private_key_here

# API credentials (optional for read-only operations)
POLYMARKET_API_KEY=your_api_key_here
POLYMARKET_API_SECRET=your_api_secret_here
POLYMARKET_API_PASSPHRASE=your_passphrase_here

# Scanning configuration
SCAN_INTERVAL_SECONDS=30
DASHBOARD_UPDATE_SECONDS=60
DATA_SAVE_INTERVAL_MINUTES=60

# Market filtering (to reduce API calls and focus on active markets)
# MAX_MARKETS= (leave empty for no limit)
MIN_VOLUME=1000

# Opportunity detection thresholds
ARBITRAGE_THRESHOLD=0.995
WIDE_SPREAD_THRESHOLD=0.05
VOLUME_SPIKE_MULTIPLIER=3.0
THIN_BOOK_MAKER_COUNT=5
